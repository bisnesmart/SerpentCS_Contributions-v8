<?xml version="1.0" ?>
<openerp>
	<data>

		<record id="inherited_project_form" model="ir.ui.view">
            <field name="name">inherited.projects.form</field>
            <field name="model">projects</field>
            <field name="inherit_id" ref="projects"/>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='alias_contact']" position="replace">
					<label for="signature_image" class="oe_edit_only"/>
					<h2><field name="signature_image" widget="signature"/></h2>
				</xpath>
            </field>
        </record>

	</data>
</openerp>